{
    "extends": "airbnb-base",
    "env": {
        "es6": false,
        "browser": true
    },
    "globals": {
        "selenium": true,
        "helpers": true,
        "page": true,
        "driver": true,
        "until": true,
        "by": true,
        "expect": true,
        "Promise": true,
        "browserName": true,
        "DEFAULT_TIMEOUT": true
    },
    "rules": {
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "func-names": 0,
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "max-len": [
            2,
            180,
            4,
            {
                "ignoreUrls": true,
                "ignoreComments": false
            }
        ],
        "new-cap": [
            "error",
            {
                "capIsNewExceptions": [
                    "Router",
                    "ObjectId",
                    "DEBUG"
                ],
                "properties": false
            }
        ],
        "no-underscore-dangle": 0,
        "no-unused-vars": [
            "warn"
        ],
        "no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ],
        "no-var": [
            "off"
        ],
        "one-var": [
            "off"
        ],
        "vars-on-top": [
            "off"
        ],
        "no-param-reassign": [
            "off"
        ],
        "no-lone-blocks": [
            "off"
        ],
        "padded-blocks": 0,
        "prefer-template": [
            "off"
        ],
        "prefer-arrow-callback": [
            "off"
        ],
        "default-case": [
            "off"
        ],
        "wrap-iife": [
            2,
            "inside"
        ],
        "no-plusplus": [
            "off"
        ],
        "require-jsdoc": [
            "warn",
            {
                "require": {
                    "FunctionDeclaration": true,
                    "MethodDefinition": true,
                    "ClassDeclaration": true
                }
            }
        ],
        "object-shorthand": [
            "error",
            "never"
        ],
        "space-before-function-paren": "off",
        "strict": "off",
        "valid-jsdoc": [
            "error"
        ]
    }
}